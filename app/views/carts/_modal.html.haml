
#exampleModal.modal.fade{"aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4#exampleModalLabel.modal-title Order Form
      .modal-body
        %form
          .form-group
            %label.control-label{:for => "recipient-name"} Email:
            %input#recipient-name.form-control{:type => "text"}/
          .form-group
            %label.control-label{:for => "message-text"} Add your comment:
            %textarea#message-text.form-control
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
        %button.btn.btn-primary{:type => "button"} Send message
