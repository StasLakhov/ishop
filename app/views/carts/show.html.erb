<h1>Cart</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
<% @cart.each do |product|%>
    <p><%= product.name %></p>
    <p><%= product.price %></p>
    <p><%= product.description %></p>
<% end %>
  </tbody>
</table>


<%= link_to 'Back', product_path %>