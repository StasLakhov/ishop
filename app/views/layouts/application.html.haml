%html
  %head
    %meta{:content => 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type'}/
    %title Ishop
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    .header
      %dt.col-md-8.h1 Ishop
      = render 'layouts/lang'
      = link_to image_tag('products.png', size: '85x85'), products_path
      = link_to image_tag('users_2.png', size: '85x85'), users_path
      = link_to image_tag('cart.png', size: '85x85'), cart_path


    = render 'layouts/flash'



  = yield

