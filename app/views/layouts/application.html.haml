%html
  %head
    %meta{:content => 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type'}/
    %title Ishop
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    .header
      %dt.col-md-1= link_to image_tag('ishop.png', size: '85x85'), products_path
      %dt.col-md-1= link_to image_tag('products_2.png', size: '85x85'), products_path
      %dt.col-md-1= link_to image_tag('users-3.png', size: '85x85'), users_path
      %dt.col-md-7= link_to image_tag('cart_2.png', size: '85x85'), cart_path
      %dt.col-md-2= render 'layouts/lang'

    = render 'layouts/flash'



  = yield

