%p{id:"notice"}= notice

.container
  .panel.panel-default
    .panel-heading
      %h3= t('.product_description')
    %table.table
      %thead
        %tr
          %th= t('.name')
          %th= t('.price')
          %th= t('.description')

      %tbody
        %tr
          %td= @product.name
          %td= @product.price
          %td= @product.description
          %td= link_to t('.destroy'), @product, method: :delete, class: 'btn btn-danger'

  %td= link_to t('.back'), products_path, class: 'btn btn-default'


