%p{id:"notice"}= notice

.container
    .panel.panel-default
        .panel-heading
            %h3= t('.products')
        %table.table
            %thead
                %tr
                    %th= link_to t('.name'), :sort => 'name'
                    %th= link_to t('.price'), :sort => 'price'
                    %th= t('.description')

            %tbody
            - @products.each do |product|
                %tr
                    %td= product.name
                    %td= product.price
                    %td= product.description
                    %td= link_to t('.show'), product, class: 'btn btn-info'
                    %td= link_to t('.buy'), add_cart_path(product_id: product.id), remote: true, class: 'btn btn-success'
                    %td= link_to t('.destroy'), product, method: :delete, class: 'btn btn-danger', data: { confirm: t('.confirm_message') }

    %br
    %td= link_to t('.new_product'), new_product_path, class: 'btn btn-default'
