%p{id:"notice"}= notice

%h1 Products

%table
  %thead
    %tr
      %th= link_to 'Name', :sort => 'name'
      %th= link_to 'Price', :sort => 'price'
      %th Description
      %th= colspan="3"

  %tbody
    - @products.each do |product|
      %tr
        %td= product.name
        %td= product.price
        %td= product.description
        %td= link_to 'Show', product
        %td= link_to 'Buy', add_cart_path(product_id: product.id), remote: true
        %td= link_to 'Destroy', product, method: :delete



%td= link_to 'New Product', new_product_path
%td= link_to 'Cart', cart_path