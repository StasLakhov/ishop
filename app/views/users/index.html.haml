%p{id:"notice"}= notice

.container
  .panel.panel-default
    .panel-heading
      %h3= t('.users')
    %table.table
      %thead
        %tr
          %th= t('.name')
          %th= t('.age')

      %tbody
        - @users.each do |user|
          %tr
            %td= user.name
            %td= user.age
            %td= link_to t('.show'), user, class: 'btn btn-info'
            %td= link_to t('.edit'), edit_user_path(user), class: 'btn btn-success'
            %td= link_to t('.destroy'), user, method: :delete, data: { confirm: t('.confirm_message') }, class: 'btn btn-danger'

  %br
  %td= link_to t('.new_user'), new_user_path, class: 'btn btn-default'


