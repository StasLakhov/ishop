%p{id:"notice"}= notice

= image_tag @user.avatar.url(:thumb)

.container
  .panel.panel-default
    .panel-heading
      %h3= t('.users')
    %table.table
      %thead
        %tr
          %th= t('.name')
          %th= t('.age')

      %tbody
        %tr
          %td= @user.name
          %td= @user.age
          %td= link_to t('.edit'), edit_user_path(@user), class: 'btn btn-success'
  %br
  %td= link_to t('.back'), users_path, class: 'btn btn-default'